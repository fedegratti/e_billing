<%= form_for([@client,@bill], url: { action: action } ) do |f| %>
<% if @bill.errors.any? %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert">Ã—</button>
  <h2><%= pluralize(@bill.errors.count, "error") %>
  <%= t('prohibited_this_from_being_saved', obj: t('bill')) %>:</h2>
    <ul>
    <% @bill.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <%= notice %>
</div>
<script type="text/javascript">
  $( document ).ready(function()
  {
    $('.field_with_errors').css ("display","block");
    $('.field_with_errors').css ("background-color","#eee");
    $('.field_with_errors').css ("border-radius","3px");
  });
</script>
<% end %>

<h1><%= t(method + '_bill') %></h1>

<div class="col-lg-6">
  <div class="well bs-component">
    <form class="form-horizontal">
      <fieldset>
        <legend></legend>

        <%= f.hidden_field :client_id %>

        <div class="form-group">
          <%= f.label t('person'), class:'col-lg-2 control-label'  %>
          <div class="col-lg-10">
            <%= f.select :person_id, @people, {}, { class: "form-control", required: true } %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label t('issue_date'), class:'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.date_field :issue_date, class:'form-control', placeholder: t('issue_date'), required: true %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label t('description'), class:'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.text_area :description, class:'form-control', rows:3, placeholder: t('description') %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label t('total_amount'), class:'col-lg-2 control-label' %>
          <div class="col-lg-10">
            <%= f.text_field :total_amount, class:'form-control', placeholder: t('total_amount'), required: true %>
          </div>
        </div>

        <div class="form-group">
          <div class="col-lg-10 col-lg-offset-2">
            <%= link_to t('cancel'), client_bills_path, class:"btn btn-default" %>
            <button type="submit" class="btn btn-primary"><%= t('submit') %></button>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</div>
<% end %>
