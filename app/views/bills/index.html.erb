<p id="notice"><%= notice %></p>

<div class="col-lg-12">
  <div class="page-header">
    <h1 id="tables">Listing <%= @client.first_name %> <%= @client.last_name %>'s Bills</h1>
  </div>

  <div class="bs-component">
    <table class="table table-striped table-hover ">

      <thead>
        <tr>
          <th>Client</th>
          <th>Person</th>
          <th>Description</th>
          <th>Total amount</th>
          <th>Issue date</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @bills.each do |bill| %>
          <tr>
            <td><%= bill.client.first_name %> <%= bill.client.last_name %></td>
            <td><%= bill.person.name %></td>
            <td><%= bill.description %></td>
            <td><%= bill.total_amount %></td>
            <td><%= bill.issue_date %></td>
            <td><%= link_to 'More info', client_bill_path(@client, bill) %></td>
            <td><%= link_to 'Edit', edit_client_bill_path(@client,bill) %></td>
            <td><%= link_to 'Destroy', client_bill_path(@client, bill), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to 'New Bill', new_client_bill_path, class:"btn btn-primary" %>
<%= link_to 'Back to '+ @client.first_name + ' ' + @client.last_name, client_path(@client), class:"btn btn-primary" %>
