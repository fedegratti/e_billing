<% if notice %>
<div class="alert alert-dismissable alert-success">
  <button type="button" class="close" data-dismiss="alert">Ã—</button>
  <%= notice %>
</div>
<% end %>

<div class="col-lg-12">
  <div class="page-header">
    <h1 id="tables"><%= t('listing_bills', first_name: @client.first_name, last_name: @client.last_name) %></h1>
  </div>

  <div class="bs-component">
    <table class="table table-striped table-hover ">

      <thead>
        <tr>
          <th><%= t('client') %></th>
          <th><%= t('person') %></th>
          <th><%= t('description') %></th>
          <th><%= t('total_amount') %></th>
          <th><%= t('issue_date') %></th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% @bills.each do |bill| %>
          <tr>
            <td><%= bill.client.first_name %> <%= bill.client.last_name %></td>
            <td><%= bill.person.name %></td>
            <td><%= bill.description %></td>
            <td><%= bill.total_amount %></td>
            <td><%= bill.issue_date %></td>
            <td><%= link_to t('edit',obj: ""), edit_client_bill_path(@client,bill) %></td>
            <td><%= link_to t('destroy'), client_bill_path(@client, bill), method: :delete, data: { confirm: t('are_you_sure') } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to t('new_bill'), new_client_bill_path, class:"btn btn-primary" %>
<%= link_to t('back_to', first_name: @client.first_name, last_name: @client.last_name), client_path(@client), class:"btn btn-primary" %>
