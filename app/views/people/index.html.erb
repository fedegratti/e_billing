<% if notice %>
<div class="alert alert-dismissable alert-success">
  <button type="button" class="close" data-dismiss="alert">Ã—</button>
  <%= notice %>
</div>
<% end %>

<div class="col-lg-12">
  <div class="page-header">
    <h1 id="tables"><%= t('listing_people') %></h1>
  </div>

  <div class="bs-component">
    <table class="table table-striped table-hover ">
      <thead>
      <tr>
        <th><%= t('name') %></th>
        <th><%= t('cuit') %></th>
        <th><%= t('legal') %></th>
        <th colspan="2"></th>
      </tr>
      </thead>
      <tbody>
      <% @people.each do |person| %>
          <tr>
            <td><%= person.name %></td>
            <td><%= person.cuit %></td>
            <td><%= person.legal == 1 ? t('yes') : t('no')%></td>
            <td><%= link_to t('edit', obj: ""), edit_person_path(person) %></td>
            <td><%= link_to t('destroy'), person, method: :delete, data: { confirm: t('are_you_sure') } %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <%= link_to t('new_person'), new_person_path, class:"btn btn-primary" %>
  </div>
</div>
